<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal" >
    

    <TextView android:id="@+id/ctr_rule_type"
        android:layout_width="60dp"
        android:layout_height="match_parent"
        android:text="类型"
        android:gravity="center"/>
    
    <LinearLayout 
        android:id="@+id/ctr_rule_detail_linear"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/ctr_rule_detail_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"/>
        <TextView 
            android:id="@+id/ctr_rule_detail_2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:singleLine="true"/>
    </LinearLayout>
    
    <TextView 
        android:id="@+id/ctr_rule_detail_s"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:singleLine="true"
        android:visibility="gone"/>
    
    <TextView 
        android:id="@+id/ctr_rule_stts"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="ctrstaus"
        android:gravity="center"
        android:background="#ffcce198"/>
    
    <LinearLayout 
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView 
            android:id="@+id/ctr_rule_modify"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="修改"
            android:gravity="center"
            android:drawableLeft="@drawable/modify"/>
        <TextView 
            android:id="@+id/ctr_rule_delete"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="删除"
            android:gravity="center"
            android:drawableLeft="@drawable/delete"/>
    </LinearLayout>
</LinearLayout>